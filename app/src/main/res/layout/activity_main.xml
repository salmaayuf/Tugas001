<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        tools:context="id.sch.smktelkom_mlg.tugas01.xiirpl5033.tugas001.MainActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="Surat Tugas"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextNamaPem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Pemberi Tugas" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextTanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tanggal" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/textViewJabatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jabatan" />

        <RadioGroup
            android:id="@+id/radioGroupJabatan"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radioButtonPR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Pemimpin Redaksi" />

            <RadioButton
                android:id="@+id/radioButtonSR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Sekretaris Redaksi" />

            <RadioButton
                android:id="@+id/radioButtonRD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Redaktur" />

            <RadioButton
                android:id="@+id/radioButtonRP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Reporter" />

            <TextView
                android:id="@+id/textViewTempat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tempat" />

        </RadioGroup>

        <Spinner
            android:id="@+id/spinnerProvinsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/provinsi" />

        <Spinner
            android:id="@+id/spinnerKota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewPenugasan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Penugasan" />

        <CheckBox
            android:id="@+id/checkBoxRP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Reportase" />

        <CheckBox
            android:id="@+id/checkBoxWC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Wawancara" />

        <CheckBox
            android:id="@+id/checkBoxRK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Riset Kepustakaan" />

        <CheckBox
            android:id="@+id/checkBoxPL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Pelatihan" />

        <Button
            android:id="@+id/buttonOK"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bgbtn"
            android:text="OK"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textViewSurat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/textViewHasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewNama"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right" />
    </LinearLayout>
</ScrollView>